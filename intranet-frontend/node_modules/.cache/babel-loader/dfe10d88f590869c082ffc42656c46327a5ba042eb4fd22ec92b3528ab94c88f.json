{"ast":null,"code":"import axios from 'axios';\nimport moment from 'moment';\nimport 'moment/locale/es';\nimport Swal from 'sweetalert2';\nimport { FontAwesomeIcon } from '@fortawesome/vue-fontawesome';\nexport default {\n  components: {\n    FontAwesomeIcon\n  },\n  data() {\n    return {\n      aprobaciones: []\n    };\n  },\n  methods: {\n    fetchAprobaciones() {\n      axios.get('http://localhost:8000/api/listar_aprobaciones_dpto').then(response => {\n        if (response.data.success) {\n          this.aprobaciones = response.data.data;\n          this.$emit('update-pending-count', this.aprobaciones.length); // Emitir evento con la cantidad de aprobaciones\n        }\n      }).catch(error => {\n        console.error('Error fetching aprobaciones:', error);\n      });\n    },\n    aprobarSolicitud(id_solicitud) {\n      axios.post(`http://localhost:8000/api/aprobar_solicitud/${id_solicitud}`).then(response => {\n        if (response.data.success) {\n          this.fetchAprobaciones();\n          Swal.fire({\n            title: 'Aprobado!',\n            text: 'La solicitud ha sido aprobada exitosamente.',\n            icon: 'success',\n            timer: 2000,\n            showConfirmButton: false\n          });\n        }\n      }).catch(error => {\n        Swal.fire({\n          title: 'Error!',\n          text: `Error al aprobar la solicitud: ${error.response.data.message || error.message}`,\n          icon: 'error',\n          timer: 3000,\n          showConfirmButton: false\n        });\n        console.error('Error approving solicitud:', error);\n      });\n    },\n    rechazarSolicitud(id_solicitud) {\n      Swal.fire({\n        title: 'Ingrese el motivo para el rechazo:',\n        input: 'textarea',\n        inputAttributes: {\n          'aria-label': 'Ingrese el motivo para el rechazo'\n        },\n        showCancelButton: true,\n        confirmButtonText: 'Rechazar',\n        cancelButtonText: 'Cancelar',\n        showLoaderOnConfirm: true,\n        preConfirm: comentarios_jefe => {\n          if (!comentarios_jefe) {\n            Swal.showValidationMessage('Debe ingresar un motivo para el rechazo');\n          } else {\n            return axios.post(`http://localhost:8000/api/rechazar_solicitud/${id_solicitud}`, {\n              comentarios_jefe\n            }).then(response => {\n              if (!response.data.success) {\n                throw new Error(response.data.message || 'Error rechazando la solicitud');\n              }\n              return response.data;\n            }).catch(error => {\n              Swal.showValidationMessage(`Request failed: ${error}`);\n            });\n          }\n        },\n        allowOutsideClick: () => !Swal.isLoading()\n      }).then(result => {\n        if (result.isConfirmed) {\n          Swal.fire({\n            title: 'Rechazado!',\n            text: 'La solicitud ha sido rechazada.',\n            icon: 'success',\n            timer: 2000,\n            showConfirmButton: false\n          });\n          this.fetchAprobaciones();\n        }\n      });\n    },\n    visualizarSolicitud(id_solicitud) {\n      // Lógica para visualizar la solicitud (puede ser una redirección a una vista detallada o mostrar un modal)\n      console.log(`Visualizando solicitud con ID: ${id_solicitud}`);\n    },\n    formatFecha(fecha) {\n      if (!fecha) return '';\n      return moment(fecha).format('MMMM D YYYY, h:mm a');\n    }\n  },\n  mounted() {\n    this.fetchAprobaciones();\n  }\n};","map":{"version":3,"names":["axios","moment","Swal","FontAwesomeIcon","components","data","aprobaciones","methods","fetchAprobaciones","get","then","response","success","$emit","length","catch","error","console","aprobarSolicitud","id_solicitud","post","fire","title","text","icon","timer","showConfirmButton","message","rechazarSolicitud","input","inputAttributes","showCancelButton","confirmButtonText","cancelButtonText","showLoaderOnConfirm","preConfirm","comentarios_jefe","showValidationMessage","Error","allowOutsideClick","isLoading","result","isConfirmed","visualizarSolicitud","log","formatFecha","fecha","format","mounted"],"sources":["C:\\laragon\\www\\intranet-frontend\\src\\components\\Lista_Aprobaciones.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\">\r\n    <h2>Lista de Aprobaciones</h2>\r\n    <div class=\"card p-3 border rounded\">\r\n      <table class=\"table table-striped\">\r\n        <thead>\r\n          <tr>\r\n            <th>ID Solicitud</th>\r\n            <th>Colaborador</th>\r\n            <th>Tipo de Solicitud</th>\r\n            <th>Fecha de Creación</th>\r\n            <th>Acciones</th>\r\n          </tr>\r\n        </thead>\r\n        <tbody>\r\n          <tr v-if=\"aprobaciones.length === 0\">\r\n            <td colspan=\"5\" class=\"text-center\">\r\n              No hay solicitudes pendientes <font-awesome-icon :icon=\"['far', 'face-smile-wink']\" />\r\n            </td>\r\n          </tr>\r\n          <tr v-else v-for=\"aprobacion in aprobaciones\" :key=\"aprobacion.id_solicitud\">\r\n            <td>{{ aprobacion.id_solicitud }}</td>\r\n            <td>{{ aprobacion.jefe_departamento }}</td>\r\n            <td>{{ aprobacion.tipo_solicitud }}</td>\r\n            <td>{{ formatFecha(aprobacion.fecha_creacion) }}</td>\r\n            <td>\r\n              <button class=\"btn btn-success btn-sm\" @click=\"aprobarSolicitud(aprobacion.id_solicitud)\">\r\n                <font-awesome-icon :icon=\"['fas', 'check']\" />\r\n              </button>\r\n              <button class=\"btn btn-danger btn-sm\" @click=\"rechazarSolicitud(aprobacion.id_solicitud)\">\r\n                <font-awesome-icon :icon=\"['fas', 'xmark']\" />\r\n              </button>\r\n              <button class=\"btn btn-info btn-sm\" @click=\"visualizarSolicitud(aprobacion.id_solicitud)\">\r\n                <font-awesome-icon :icon=\"['fas', 'eye']\" />\r\n              </button>\r\n            </td>\r\n          </tr>\r\n        </tbody>\r\n      </table>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\nimport moment from 'moment';\r\nimport 'moment/locale/es';\r\nimport Swal from 'sweetalert2';\r\nimport { FontAwesomeIcon } from '@fortawesome/vue-fontawesome';\r\n\r\nexport default {\r\n  components: {\r\n    FontAwesomeIcon\r\n  },\r\n  data() {\r\n    return {\r\n      aprobaciones: [],\r\n    };\r\n  },\r\n  methods: {\r\n    fetchAprobaciones() {\r\n      axios.get('http://localhost:8000/api/listar_aprobaciones_dpto')\r\n        .then(response => {\r\n          if (response.data.success) {\r\n            this.aprobaciones = response.data.data;\r\n            this.$emit('update-pending-count', this.aprobaciones.length); // Emitir evento con la cantidad de aprobaciones\r\n          }\r\n        })\r\n        .catch(error => {\r\n          console.error('Error fetching aprobaciones:', error);\r\n        });\r\n    },\r\n    aprobarSolicitud(id_solicitud) {\r\n      axios.post(`http://localhost:8000/api/aprobar_solicitud/${id_solicitud}`)\r\n        .then(response => {\r\n          if (response.data.success) {\r\n            this.fetchAprobaciones();\r\n            Swal.fire({\r\n              title: 'Aprobado!',\r\n              text: 'La solicitud ha sido aprobada exitosamente.',\r\n              icon: 'success',\r\n              timer: 2000,\r\n              showConfirmButton: false\r\n            });\r\n          }\r\n        })\r\n        .catch(error => {\r\n          Swal.fire({\r\n            title: 'Error!',\r\n            text: `Error al aprobar la solicitud: ${error.response.data.message || error.message}`,\r\n            icon: 'error',\r\n            timer: 3000,\r\n            showConfirmButton: false\r\n          });\r\n          console.error('Error approving solicitud:', error);\r\n        });\r\n    },\r\n    rechazarSolicitud(id_solicitud) {\r\n      Swal.fire({\r\n        title: 'Ingrese el motivo para el rechazo:',\r\n        input: 'textarea',\r\n        inputAttributes: {\r\n          'aria-label': 'Ingrese el motivo para el rechazo'\r\n        },\r\n        showCancelButton: true,\r\n        confirmButtonText: 'Rechazar',\r\n        cancelButtonText: 'Cancelar',\r\n        showLoaderOnConfirm: true,\r\n        preConfirm: (comentarios_jefe) => {\r\n          if (!comentarios_jefe) {\r\n            Swal.showValidationMessage('Debe ingresar un motivo para el rechazo');\r\n          } else {\r\n            return axios.post(`http://localhost:8000/api/rechazar_solicitud/${id_solicitud}`, { comentarios_jefe })\r\n              .then(response => {\r\n                if (!response.data.success) {\r\n                  throw new Error(response.data.message || 'Error rechazando la solicitud');\r\n                }\r\n                return response.data;\r\n              })\r\n              .catch(error => {\r\n                Swal.showValidationMessage(`Request failed: ${error}`);\r\n              });\r\n          }\r\n        },\r\n        allowOutsideClick: () => !Swal.isLoading()\r\n      }).then((result) => {\r\n        if (result.isConfirmed) {\r\n          Swal.fire({\r\n            title: 'Rechazado!',\r\n            text: 'La solicitud ha sido rechazada.',\r\n            icon: 'success',\r\n            timer: 2000,\r\n            showConfirmButton: false\r\n          });\r\n          this.fetchAprobaciones();\r\n        }\r\n      });\r\n    },\r\n    visualizarSolicitud(id_solicitud) {\r\n      // Lógica para visualizar la solicitud (puede ser una redirección a una vista detallada o mostrar un modal)\r\n      console.log(`Visualizando solicitud con ID: ${id_solicitud}`);\r\n    },\r\n    formatFecha(fecha) {\r\n      if (!fecha) return '';\r\n      return moment(fecha).format('MMMM D YYYY, h:mm a');\r\n    },\r\n  },\r\n  mounted() {\r\n    this.fetchAprobaciones();\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.container {\r\n  margin-top: 20px;\r\n}\r\n.table th, .table td {\r\n  vertical-align: middle;\r\