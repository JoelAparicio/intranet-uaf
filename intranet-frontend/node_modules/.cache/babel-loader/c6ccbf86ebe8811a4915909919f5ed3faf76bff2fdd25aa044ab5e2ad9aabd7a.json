{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nexport default {\n  name: 'Roles',\n  data() {\n    return {\n      roles: [],\n      currentPage: 1,\n      rolesPerPage: 6,\n      showModal: false,\n      showAssignModal: false,\n      newRole: '',\n      userEmail: '',\n      selectedRole: null\n    };\n  },\n  computed: {\n    totalPages() {\n      return Math.ceil(this.roles.length / this.rolesPerPage);\n    },\n    paginatedRoles() {\n      const start = (this.currentPage - 1) * this.rolesPerPage;\n      const end = start + this.rolesPerPage;\n      return this.roles.slice(start, end);\n    }\n  },\n  methods: {\n    fetchRoles() {\n      axios.get('http://localhost:8000/api/roles').then(response => {\n        this.roles = response.data;\n      }).catch(error => {\n        console.error('Error fetching roles:', error);\n      });\n    },\n    changePage(page) {\n      if (page >= 1 && page <= this.totalPages) {\n        this.currentPage = page;\n      }\n    },\n    nextPage() {\n      if (this.currentPage < this.totalPages) {\n        this.currentPage++;\n      }\n    },\n    previousPage() {\n      if (this.currentPage > 1) {\n        this.currentPage--;\n      }\n    },\n    getIcon(roleName) {\n      switch (roleName) {\n        case 'Nuevo Rol':\n          return ['fas', 'user-plus'];\n        case 'Rol Ejemplo':\n          return ['fas', 'users'];\n        case 'Rol de Prueba':\n          return ['fas', 'user-check'];\n        case 'Rol de Administrador':\n          return ['fas', 'user-shield'];\n        case 'Rol de Manager':\n          return ['fas', 'user-tie'];\n        case 'Rol de Usuario':\n          return ['fas', 'user'];\n        case 'Rol de Invitado':\n          return ['fas', 'user-clock'];\n        default:\n          return ['fas', 'user'];\n      }\n    },\n    showAddRoleModal() {\n      this.showModal = true;\n    },\n    hideAddRoleModal() {\n      this.showModal = false;\n    },\n    createRole() {\n      axios.post('http://localhost:8000/api/agregar_roles', {\n        name: this.newRole\n      }).then(response => {\n        this.roles.push(response.data.data);\n        this.hideAddRoleModal();\n        this.newRole = '';\n      });\n    },\n    showAssignUserModal(role) {\n      this.selectedRole = role;\n      this.showAssignModal = true;\n    },\n    hideAssignUserModal() {\n      this.showAssignModal = false;\n      this.userEmail = '';\n    },\n    assignRoleToUser() {\n      axios.post('http://localhost:8000/api/assignRoleToUser', {\n        user_email: this.userEmail,\n        role: this.selectedRole.name\n      }).then(response => {\n        this.hideAssignUserModal();\n        this.userEmail = '';\n      });\n    }\n  },\n  mounted() {\n    this.fetchRoles();\n  }\n};","map":{"version":3,"names":["axios","name","data","roles","currentPage","rolesPerPage","showModal","showAssignModal","newRole","userEmail","selectedRole","computed","totalPages","Math","ceil","length","paginatedRoles","start","end","slice","methods","fetchRoles","get","then","response","catch","error","console","changePage","page","nextPage","previousPage","getIcon","roleName","showAddRoleModal","hideAddRoleModal","createRole","post","push","showAssignUserModal","role","hideAssignUserModal","assignRoleToUser","user_email","mounted"],"sources":["C:\\laragon\\www\\intranet-frontend\\src\\components\\Roles.vue"],"sourcesContent":["<template>\r\n  <div class=\"container mt-4\">\r\n    <div class=\"card shadow-sm no-animation mb-4\">\r\n      <div class=\"card-header d-flex justify-content-between align-items-center\">\r\n        <div>\r\n          <h2>Administración de Roles</h2>\r\n          <p>Descripción de la página</p>\r\n        </div>\r\n        <button class=\"btn btn-add-role\" @click=\"showAddRoleModal\">Agregar rol</button>\r\n      </div>\r\n      <div class=\"card-body\">\r\n        <div class=\"row roles-container\">\r\n          <div\r\n            v-for=\"(role, index) in paginatedRoles\"\r\n            :key=\"index\"\r\n            class=\"col-md-4 mb-4\"\r\n          >\r\n            <div class=\"card h-100 shadow-sm role-card with-animation\">\r\n              <div class=\"card-body position-relative\">\r\n                <h5 class=\"card-title position-absolute top-0 start-0 m-3\">{{ role.name }}</h5>\r\n                <p class=\"text-end text-muted position-absolute top-0 end-0 m-3\">{{ role.users_count }} usuarios</p>\r\n                <a href=\"#\" class=\"edit-link position-absolute bottom-0 start-0 m-3\" @click=\"showAssignUserModal(role)\">Agregar usuario</a>\r\n                <font-awesome-icon :icon=\"getIcon(role.name)\" class=\"position-absolute bottom-0 end-0 m-3\"></font-awesome-icon>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        <nav aria-label=\"Page navigation\" class=\"mt-4\">\r\n          <ul class=\"pagination justify-content-center\">\r\n            <li v-if=\"totalPages > 1\" class=\"page-item\" :class=\"{ disabled: currentPage === 1 }\">\r\n              <a class=\"page-link\" href=\"#\" @click.prevent=\"previousPage\">«</a>\r\n            </li>\r\n            <li v-for=\"page in totalPages\" :key=\"page\" class=\"page-item\" :class=\"{ active: currentPage === page }\">\r\n              <a class=\"page-link\" href=\"#\" @click.prevent=\"changePage(page)\">{{ page }}</a>\r\n            </li>\r\n            <li v-if=\"totalPages > 1\" class=\"page-item\" :class=\"{ disabled: currentPage === totalPages }\">\r\n              <a class=\"page-link\" href=\"#\" @click.prevent=\"nextPage\">»</a>\r\n            </li>\r\n          </ul>\r\n        </nav>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Modal para agregar rol -->\r\n    <div v-if=\"showModal\" class=\"modal fade show d-block\" tabindex=\"-1\" role=\"dialog\" style=\"background: rgba(0,0,0,0.5)\">\r\n      <div class=\"modal-dialog\" role=\"document\">\r\n        <div class=\"modal-content\">\r\n          <div class=\"modal-header\">\r\n            <h5 class=\"modal-title\">Agregar nuevo rol</h5>\r\n            <button type=\"button\" class=\"close\" @click=\"hideAddRoleModal\">&times;</button>\r\n          </div>\r\n          <div class=\"modal-body\">\r\n            <input type=\"text\" class=\"form-control\" v-model=\"newRole\" placeholder=\"Nombre del nuevo rol\">\r\n          </div>\r\n          <div class=\"modal-footer\">\r\n            <button type=\"button\" class=\"btn btn-secondary\" @click=\"hideAddRoleModal\">Cerrar</button>\r\n            <button type=\"button\" class=\"btn btn-primary\" @click=\"createRole\">Guardar</button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Modal para asignar usuario a rol -->\r\n    <div v-if=\"showAssignModal\" class=\"modal fade show d-block\" tabindex=\"-1\" role=\"dialog\" style=\"background: rgba(0,0,0,0.5)\">\r\n      <div class=\"modal-dialog\" role=\"document\">\r\n        <div class=\"modal-content\">\r\n          <div class=\"modal-header\">\r\n            <h5 class=\"modal-title\">Asignar usuario a rol</h5>\r\n            <button type=\"button\" class=\"close\" @click=\"hideAssignUserModal\">&times;</button>\r\n          </div>\r\n          <div class=\"modal-body\">\r\n            <input type=\"text\" class=\"form-control mb-3\" v-model=\"userEmail\" placeholder=\"Correo electrónico del usuario\">\r\n          </div>\r\n          <div class=\"modal-footer\">\r\n            <button type=\"button\" class=\"btn btn-secondary\" @click=\"hideAssignUserModal\">Cerrar</button>\r\n            <button type=\"button\" class=\"btn btn-primary\" @click=\"assignRoleToUser\">Guardar</button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'Roles',\r\n  data() {\r\n    return {\r\n      roles: [],\r\n      currentPage: 1,\r\n      rolesPerPage: 6,\r\n      showModal: false,\r\n      showAssignModal: false,\r\n      newRole: '',\r\n      userEmail: '',\r\n      selectedRole: null,\r\n    };\r\n  },\r\n  computed: {\r\n    totalPages() {\r\n      return Math.ceil(this.roles.length / this.rolesPerPage);\r\n    },\r\n    paginatedRoles() {\r\n      const start = (this.currentPage - 1) * this.rolesPerPage;\r\n      const end = start + this.rolesPerPage;\r\n      return this.roles.slice(start, end);\r\n    },\r\n  },\r\n  methods: {\r\n    fetchRoles() {\r\n      axios.get('http://localhost:8000/api/roles').then(response => {\r\n        this.roles = response.data;\r\n      }).catch(error => {\r\n        console.error('Error fetching roles:', error);\r\n      });\r\n    },\r\n    changePage(page) {\r\n      if (page >= 1 && page <= this.totalPages) {\r\n        this.currentPage = page;\r\n      }\r\n    },\r\n    nextPage() {\r\n      if (this.currentPage < this.totalPages) {\r\n        this.currentPage++;\r\n      }\r\n    },\r\n    previousPage() {\r\n      if (this.currentPage > 1) {\r\n        this.currentPage--;\r\n      }\r\n    },\r\n    getIcon(roleName) {\r\n      switch (roleName) {\r\n        case 'Nuevo Rol':\r\n          return ['fas', 'user-plus'];\r\n        case 'Rol Ejemplo':\r\n          return ['fas', 'users'];\r\n        case 'Rol de Prueba':\r\n          return ['fas', 'user-check'];\r\n        case 'Rol de Administrador':\r\n          return ['fas', 'user-shield'];\r\n        case 'Rol de Manager':\r\n          return ['fas', 'user-tie'];\r\n        case 'Rol de Usuario':\r\n          return ['fas', 'user'];\r\n        case 'Rol de Invitado':\r\n          return ['fas', 'user-clock'];\r\n        default:\r\n          return ['fas', 'user'];\r\n      }\r\n    },\r\n    showAddRoleModal() {\r\n      this.showModal = true;\r\n    },\r\n    hideAddRoleModal() {\r\n      this.showModal = false;\r\n    },\r\n    createRole() {\r\n      axios.post('http://localhost:8000/api/agregar_roles', { name: this.newRole }).then(response => {\r\n        this.roles.push(response.data.data);\r\n        this.hideAddRoleModal();\r\n        this.newRole = '';\r\n      });\r\n    },\r\n    showAssignUserModal(role) {\r\n      this.selectedRole = role;\r\n      this.showAssignModal = true;\r\n    },\r\n    hideAssignUserModal() {\r\n      this.showAssignModal = false;\r\n      this.userEmail = '';\r\n    },\r\n    assignRoleToUser() {\r\n      axios.post('http://localhost:8000/api/assignRoleToUser', { user_email: this.userEmail, role: this.selectedRole.name }).then(response => {\r\n        this.hideAssignUserModal();\r\n        this.userEmail = '';\r\n      });\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchRoles();\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.roles-container {\r\n  min-height: 400px; /* Ajusta esta altura según sea necesario */\r\n}\r\n.card.no-animation {\r\n  border: 1px solid #ddd; /* Borde gris claro */\r\n  border-radius: 0.5rem; /* Bordes redondeados */\r\n  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); /* Sombra suave */\r\n}\r\n.card.with-animation {\r\n  border: 1px solid #ddd; /* Borde gris claro */\r\n  border-radius: 0.5rem; /* Bordes redondeados */\r\n  transition: transform 0.3s, box-shadow 0.3s;\r\n  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); /* Sombra suave */\r\n}\r\n.card.with-animation:hover {\r\n  transform: translateY(-5px);\r\n  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Sombra más pronunciada */\r\n}\r\n.card-body {\r\n  padding: 1.25rem;\r\n  position: relative;\r\n}\r\n.card-header {\r\n  background-color: #f8f9fa; /* Fondo claro */\r\n  border-bottom: 1px solid #ddd; /* Línea separadora */\r\n  padding: 1rem 1.25rem;\r\n}\r\n.edit-link {\r\n  color: #007bff;\r\n  text-decoration: none;\r\n  font-weight: bold;\r\n  transition: color 0.2s;\r\n}\r\n.edit-link:hover {\r\n  color: #0056b3;\r\n  text-decoration: underline;\r\n}\r\n.pagination {\r\n  margin-top: 20px;\r\n}\r\n.pagination .page-item {\r\n  margin: 0 5px; /* Espaciado entre botones */\r\n}\r\n.pagination .page-item .page-link {\r\n  color: #007bff;\r\n  border-radius: 25%; /* Redondear los botones */\r\n  transition: background-color 0.3s, color 0.3s; /* Transiciones suaves */\r\n  outline: none; /* Eliminar el resaltado */\r\n}\r\n.pagination .page-item.active .page-link {\r\n  background-color: #0056b3; /* Color de fondo para el botón activo */\r\n  border-color: #0056b3; /* Color de borde para el botón activo */\r\n  color: white; /* Color de texto para el botón activo */\r\n  box-shadow: none; /* Eliminar la sombra */\r\n}\r\n.pagination .page-item .page-link:hover {\r\n  background-color: #e9ecef; /* Color de fondo al pasar el mouse */\r\n  color: #0056b3; /* Color de texto al pasar el mouse */\r\n}\r\n\r\n/* Estilos del botón \"Agregar rol\" */\r\n.btn-add-role {\r\n  background-color: #007bff;\r\n  border: none;\r\n  color: white;\r\n  padding: 0.5rem 1rem;\r\n  font-size: 1rem;\r\n  font-weight: bold;\r\n  border-radius: 0.5rem;\r\n  transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s, color 0.3s;\r\n  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); /* Sombra suave */\r\n}\r\n.btn-add-role:hover {\r\n  background-color: #0056b3;\r\n  transform: translateY(-3px);\r\n  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Sombra más pronunciada */\r\n  color: #fff; /* Cambio de color del texto */\r\n}\r\n.btn-add-role:focus {\r\n  outline: none;\r\n}\r\n</style>\r\n"],"mappings":";AAoFA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,OAAO;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,EAAE;MACTC,WAAW,EAAE,CAAC;MACdC,YAAY,EAAE,CAAC;MACfC,SAAS,EAAE,KAAK;MAChBC,eAAe,EAAE,KAAK;MACtBC,OAAO,EAAE,EAAE;MACXC,SAAS,EAAE,EAAE;MACbC,YAAY,EAAE;IAChB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,UAAUA,CAAA,EAAG;MACX,OAAOC,IAAI,CAACC,IAAI,CAAC,IAAI,CAACX,KAAK,CAACY,MAAK,GAAI,IAAI,CAACV,YAAY,CAAC;IACzD,CAAC;IACDW,cAAcA,CAAA,EAAG;MACf,MAAMC,KAAI,GAAI,CAAC,IAAI,CAACb,WAAU,GAAI,CAAC,IAAI,IAAI,CAACC,YAAY;MACxD,MAAMa,