      <td>{{ user.nombre }}</td>\r\n                <td>{{ user.correo_electronico }}</td>\r\n                <td>{{ user.roles.join(', ') }}</td>\r\n                <td>\r\n                  <span :class=\"user.estado === 'Activo' ? 'badge status-active' : 'badge status-inactive'\">\r\n                    {{ user.estado }}\r\n                  </span>\r\n                </td>\r\n                <td>\r\n                  <button class=\"btn btn-link text-danger btn-action\" @click=\"confirmDeleteUser(user.id)\">\r\n                    <font-awesome-icon :icon=\"['fas', 'ban']\" class=\"fa-lg\" />\r\n                  </button>\r\n                  <button class=\"btn btn-link text-primary btn-action\" @click=\"openEditUserModal(user)\">\r\n                    <font-awesome-icon :icon=\"['fas', 'user-pen']\" class=\"fa-lg\" />\r\n                  </button>\r\n                  <transition name=\"fade\" mode=\"out-in\">\r\n                    <button class=\"btn btn-link text-dark btn-action\" @click=\"toggleUserStatus(user)\">\r\n                      <font-awesome-icon :icon=\"user.estado === 'Activo' ? ['fas', 'toggle-on'] : ['fas', 'toggle-off']\" class=\"fa-lg\" />\r\n                    </button>\r\n                  </transition>\r\n                </td>\r\n              </tr>\r\n            </tbody>\r\n          </table>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Modal para editar usuario -->\r\n    <div class=\"modal fade\" id=\"editUserModal\" tabindex=\"-1\" aria-labelledby=\"editUserModalLabel\" aria-hidden=\"true\">\r\n      <div class=\"modal-dialog\">\r\n        <div class=\"modal-content\">\r\n          <div class=\"modal-header\">\r\n            <h5 class=\"modal-title\" id=\"editUserModalLabel\">Editar Usuario</h5>\r\n            <button type=\"button\" class=\"btn-close\" data-bs-dismiss=\"modal\" aria-label=\"Close\"></button>\r\n          </div>\r\n          <div class=\"modal-body\">\r\n            <form @submit.prevent=\"updateUser\">\r\n              <div class=\"mb-3\">\r\n                <label for=\"nombre\" class=\"form-label\">Nombre</label>\r\n                <input type=\"text\" class=\"form-control\" id=\"nombre\" v-model=\"editUserData.nombre\" required />\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"correo_electronico\" class=\"form-label\">Correo Electrónico</label>\r\n                <input type=\"email\" class=\"form-control\" id=\"correo_electronico\" v-model=\"editUserData.correo_electronico\" required />\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"cargo\" class=\"form-label\">Cargo</label>\r\n                <input type=\"text\" class=\"form-control\" id=\"cargo\" v-model=\"editUserData.cargo\" required />\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"posicion\" class=\"form-label\">Posición</label>\r\n                <input type=\"text\" class=\"form-control\" id=\"posicion\" v-model=\"editUserData.posicion\" required />\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"cedula\" class=\"form-label\">Cédula</label>\r\n                <input type=\"text\" class=\"form-control\" id=\"cedula\" v-model=\"editUserData.cedula\" required />\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"extension\" class=\"form-label\">Extensión</label>\r\n                <input type=\"text\" class=\"form-control\" id=\"extension\" v-model=\"editUserData.extension\" required />\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"departamento\" class=\"form-label\">Departamento</label>\r\n                <input type=\"number\" class=\"form-control\" id=\"departamento\" v-model=\"editUserData.departamento\" />\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"tiempo_extra\" class=\"form-label\">Tiempo Extra</label>\r\n                <input type=\"number\" class=\"form-control\" id=\"tiempo_extra\" v-model=\"editUserData.tiempo_extra\" required />\r\n              </div>\r\n              <button type=\"submit\" class=\"btn btn-primary\">Guardar Cambios</button>\r\n            </form>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\nimport Swal from 'sweetalert2';\r\nimport { FontAwesomeIcon } from '@fortawesome/vue-fontawesome';\r\n\r\nexport default {\r\n  name: 'ListaUsuarioRol',\r\n  components: {\r\n    FontAwesomeIcon\r\n  },\r\n  data() {\r\n    return {\r\n      searchTerm: '',\r\n      selectedRole: '',\r\n      roles: [],\r\n      users: [],\r\n      editUserData: {\r\n        id: null,\r\n        nombre: '',\r\n        correo_electronico: '',\r\n        cargo: '',\r\n        posicion: '',\r\n        cedula: '',\r\n        extension: '',\r\n        departamento: null,\r\n        tiempo_extra: 0\r\n      }\r\n    };\r\n  },\r\n  computed: {\r\n    filteredUsers() {\r\n      return this.users.filter(user => {\r\n        return (\r\n          (this.searchTerm === '' || user.nombre.toLowerCase().includes(this.searchTerm.toLowerCase())) &&\r\n          (this.selectedRole === '' || user.roles.includes(this.selectedRole))\r\n        );\r\n      });\r\n    },\r\n  },\r\n  methods: {\r\n    async fetchUsers() {\r\n      try {\r\n        const response = await axios.get('http://localhost:8000/api/administrar_usuarios');\r\n        if (response.data.status) {\r\n          this.users = response.data.data;\r\n          this.roles = [...new Set(this.users.flatMap(user => user.roles))];\r\n        }\r\n      } catch (error) {\r\n        console.error('Error fetching users:', error);\r\n      }\r\n    },\r\n    async deleteUser(id) {\r\n      try {\r\n        await axios.put(`http://localhost:8000/api/borrar_usuario/${id}`);\r\n        this.fetchUsers(); // Refrescar la lista de usuarios después de borrar uno\r\n        Swal.fire('Eliminado!', 'El usuario ha sido eliminado.', 'success');\r\n      } catch (error) {\r\n        console.error('Error deleting user:', error);\r\n        Swal.fire('Error!', 'No se pudo eliminar el usuario.', 'error');\r\n      }\r\n    },\r\n    confirmDeleteUser(id) {\r\n      Swal.fire({\r\n        title: '¿Estás seguro?',\r\n        text: 'Esta acción será permanente y no se puede deshacer.',\r\n        icon: 'warning',\r\n        showCancelButton: true,\r\n        confirmButtonColor: '#d33',\r\n        cancelButtonColor: '#3085d6',\r\n        confirmButtonText: 'Sí, eliminar',\r\n        cancelButtonText: 'Cancelar'\r\n      }).then((result) => {\r\n        if (result.isConfirmed) {\r\n          this.deleteUser(id);\r\n        }\r\n      });\r\n    },\r\n    openEditUserModal(user) {\r\n      this.editUserData = { ...user };\r\n      const editUserModal = new bootstrap.Modal(document.getElementById('editUserModal'));\r\n      editUserModal.show();\r\n    },\r\n    async updateUser() {\r\n      try {\r\n        await axios.put(`http://localhost:8000/api/actualizar_usuario/${this.editUserData.id}`, this.editUserData);\r\n        this.fetchUsers(); // Refrescar la lista de usuarios después de actualizar uno\r\n        const editUserModal = bootstrap.Modal.getInstance(document.getElementById('editUserModal'));\r\n        editUserModal.hide();\r\n        Swal.fire('Actualizado!', 'El usuario ha sido actualizado.', 'success');\r\n      } catch (error) {\r\n        console.error('Error updating user:', error);\r\n        Swal.fire('Error!', 'No se pudo actualizar el usuario.', 'error');\r\n      }\r\n    },\r\n    toggleUserStatus(user) {\r\n      user.estado = user.estado === 'Activo' ? 'Inactivo' : 'Activo';\r\n      // Aquí podrías hacer una solicitud a la API para actualizar el estado del usuario en el servidor\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchUsers();\r\n  }\r\n};\