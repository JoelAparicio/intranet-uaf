{"ast":null,"code":"import axios from 'axios';\nimport { Modal } from 'bootstrap';\nimport Swal from 'sweetalert2';\nexport default {\n  name: 'Solicitudes',\n  data() {\n    return {\n      solicitudes: [],\n      showModal: false,\n      selectedSolicitud: null,\n      selectedSolicitudTitle: '',\n      solicitud_permiso: {\n        motivo: '',\n        observacion: '',\n        fecha_inicio: '',\n        fecha_fin: '',\n        tiempo_utilizado: ''\n      },\n      motivosDescontables: ['Enfermedad', 'Duelo', 'Matrimonio', 'Nacimiento de hijos', 'Enfermedades de parientes cercanos', 'Eventos academicos puntuales', 'Permisos personales'],\n      motivosNoDescontables: ['Mision oficial', 'Seminarios', 'Otros, especifique'],\n      solicitudModalInstance: null\n    };\n  },\n  created() {\n    this.fetchSolicitudes();\n    this.$nextTick(() => {\n      this.solicitudModalInstance = new Modal(document.getElementById('solicitudModal'));\n    });\n  },\n  methods: {\n    async fetchSolicitudes() {\n      try {\n        const response = await axios.get('http://localhost:8000/api/listar_solicitud');\n        this.solicitudes = response.data;\n      } catch (error) {\n        console.error('Error fetching solicitudes', error);\n      }\n    },\n    handleCardClick(id) {\n      this.selectedSolicitud = id;\n      this.selectedSolicitudTitle = this.getSolicitudTitle(id);\n      this.showModal = true;\n      this.solicitudModalInstance.show();\n    },\n    closeModal() {\n      this.showModal = false;\n      this.solicitudModalInstance.hide();\n    },\n    getSolicitudTitle(id) {\n      const solicitud = this.solicitudes.find(s => s.id_tipo_solicitud === id);\n      return solicitud ? solicitud.tipo_solicitud : '';\n    },\n    calculateTiempoUtilizado() {\n      if (this.solicitud_permiso.fecha_inicio && this.solicitud_permiso.fecha_fin) {\n        const fechaInicio = new Date(this.solicitud_permiso.fecha_inicio);\n        const fechaFin = new Date(this.solicitud_permiso.fecha_fin);\n        const diffMs = fechaFin - fechaInicio; // diferencia en milisegundos\n        const diffHrs = Math.floor(diffMs / (1000 * 60 * 60)); // convertir a horas\n        const diffMins = Math.floor(diffMs % (1000 * 60 * 60) / (1000 * 60)); // minutos restantes\n        this.solicitud_permiso.tiempo_utilizado = `${diffHrs} horas y ${diffMins} minutos`;\n      } else {\n        this.solicitud_permiso.tiempo_utilizado = '';\n      }\n    },\n    async enviarSolicitud() {\n      try {\n        const solicitudData = {\n          motivo: this.solicitud_permiso.motivo,\n          observacion: this.solicitud_permiso.observacion,\n          fecha_inicio: this.solicitud_permiso.fecha_inicio,\n          fecha_fin: this.solicitud_permiso.fecha_fin,\n          tipo_solicitud: this.selectedSolicitud\n        };\n        const response = await axios.post('http://localhost:8000/api/solicitud_permiso', solicitudData);\n        if (response.data.status) {\n          Swal.fire({\n            icon: 'success',\n            title: 'Éxito',\n            text: response.data.message\n          });\n          this.closeModal();\n        }\n      } catch (error) {\n        console.error('Error al enviar la solicitud', error);\n        Swal.fire({\n          icon: 'error',\n          title: 'Error',\n          text: 'Hubo un problema al enviar la solicitud'\n        });\n      }\n    }\n  },\n  watch: {\n    'solicitud_permiso.fecha_inicio': 'calculateTiempoUtilizado',\n    'solicitud_permiso.fecha_fin': 'calculateTiempoUtilizado'\n  }\n};","map":{"version":3,"names":["axios","Modal","Swal","name","data","solicitudes","showModal","selectedSolicitud","selectedSolicitudTitle","solicitud_permiso","motivo","observacion","fecha_inicio","fecha_fin","tiempo_utilizado","motivosDescontables","motivosNoDescontables","solicitudModalInstance","created","fetchSolicitudes","$nextTick","document","getElementById","methods","response","get","error","console","handleCardClick","id","getSolicitudTitle","show","closeModal","hide","solicitud","find","s","id_tipo_solicitud","tipo_solicitud","calculateTiempoUtilizado","fechaInicio","Date","fechaFin","diffMs","diffHrs","Math","floor","diffMins","enviarSolicitud","solicitudData","post","status","fire","icon","title","text","message","watch"],"sources":["C:\\laragon\\www\\intranet-frontend\\src\\components\\Solicitudes.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\">\r\n    <div class=\"col-md-12\">\r\n      <div class=\"card\">\r\n        <div class=\"card-header\">\r\n          <h5 class=\"mb-3\">Solicitudes</h5>\r\n        </div>\r\n        <div class=\"card-body\">\r\n          <p class=\"card-text\">Aquí podrás realizar solicitudes</p>\r\n          <div class=\"row\">\r\n            <div class=\"col-md-4 mb-3\" v-for=\"solicitud in solicitudes\" :key=\"solicitud.id_tipo_solicitud\">\r\n              <div \r\n                class=\"card h-100 shadow-sm clickable-card\" \r\n                @click=\"handleCardClick(solicitud.id_tipo_solicitud)\"\r\n                data-bs-toggle=\"modal\"\r\n                data-bs-target=\"#solicitudModal\"\r\n              >\r\n                <div class=\"card-body d-flex flex-column\">\r\n                  <h5 class=\"card-title\">{{ solicitud.tipo_solicitud }}</h5>\r\n                  <p class=\"card-text\">{{ solicitud.descripcion }}</p>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Modal Vue -->\r\n    <div class=\"modal fade\" id=\"solicitudModal\" tabindex=\"-1\" aria-labelledby=\"solicitudModalLabel\" aria-hidden=\"true\">\r\n      <div class=\"modal-dialog\">\r\n        <div class=\"modal-content\">\r\n          <div class=\"modal-header\">\r\n            <h5 class=\"modal-title\" id=\"solicitudModalLabel\">Formulario de {{ selectedSolicitudTitle }}</h5>\r\n            <button type=\"button\" class=\"btn-close\" data-bs-dismiss=\"modal\" aria-label=\"Close\"></button>\r\n          </div>\r\n          <div class=\"modal-body\">\r\n            <!-- Formulario dinámico basado en selectedSolicitud -->\r\n            <form v-if=\"selectedSolicitud === 1\" @submit.prevent=\"enviarSolicitud\">\r\n              <div class=\"mb-3\">\r\n                <label class=\"form-label\">Motivos descontables</label>\r\n                <div class=\"form-check\" v-for=\"(motivo, index) in motivosDescontables\" :key=\"'desc-' + index\">\r\n                  <input class=\"form-check-input\" type=\"radio\" :id=\"'desc-' + index\" name=\"motivo\" :value=\"motivo\" v-model=\"solicitud_permiso.motivo\">\r\n                  <label class=\"form-check-label\" :for=\"'desc-' + index\">\r\n                    {{ motivo }}\r\n                  </label>\r\n                </div>\r\n                <hr>\r\n                <label class=\"form-label\">Motivos no descontables</label>\r\n                <div class=\"form-check\" v-for=\"(motivo, index) in motivosNoDescontables\" :key=\"'no-desc-' + index\">\r\n                  <input class=\"form-check-input\" type=\"radio\" :id=\"'no-desc-' + index\" name=\"motivo\" :value=\"motivo\" v-model=\"solicitud_permiso.motivo\">\r\n                  <label class=\"form-check-label\" :for=\"'no-desc-' + index\">\r\n                    {{ motivo }}\r\n                  </label>\r\n                </div>\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"observacion\" class=\"form-label\">Observación</label>\r\n                <textarea class=\"form-control\" id=\"observacion\" v-model=\"solicitud_permiso.observacion\" rows=\"3\"></textarea>\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"fecha_inicio\" class=\"form-label\">Fecha de Inicio</label>\r\n                <input type=\"datetime-local\" class=\"form-control\" id=\"fecha_inicio\" v-model=\"solicitud_permiso.fecha_inicio\">\r\n              </div>\r\n              <div class=\"mb-3\">\r\n                <label for=\"fecha_fin\" class=\"form-label\">Fecha de Fin</label>\r\n                <input type=\"datetime-local\" class=\"form-control\" id=\"fecha_fin\" v-model=\"solicitud_permiso.fecha_fin\">\r\n              </div>\r\n              <button type=\"submit\" class=\"btn btn-primary\">Enviar solicitud</button>\r\n            </form>\r\n            <!-- Agregar más formularios según el tipo de solicitud -->\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios'\r\nimport { Modal } from 'bootstrap'\r\nimport Swal from 'sweetalert2'\r\n\r\nexport default {\r\n  name: 'Solicitudes',\r\n  data() {\r\n    return {\r\n      solicitudes: [],\r\n      showModal: false,\r\n      selectedSolicitud: null,\r\n      selectedSolicitudTitle: '',\r\n      solicitud_permiso: {\r\n        motivo: '',\r\n        observacion: '',\r\n        fecha_inicio: '',\r\n        fecha_fin: '',\r\n        tiempo_utilizado: '',\r\n      },\r\n      motivosDescontables: [\r\n        'Enfermedad', 'Duelo', 'Matrimonio', 'Nacimiento de hijos', \r\n        'Enfermedades de parientes cercanos', 'Eventos academicos puntuales', 'Permisos personales'\r\n      ],\r\n      motivosNoDescontables: [\r\n        'Mision oficial', 'Seminarios', 'Otros, especifique'\r\n      ],\r\n      solicitudModalInstance: null\r\n    }\r\n  },\r\n  created() {\r\n    this.fetchSolicitudes()\r\n    this.$nextTick(() => {\r\n      this.solicitudModalInstance = new Modal(document.getElementById('solicitudModal'))\r\n    })\r\n  },\r\n  methods: {\r\n    async fetchSolicitudes() {\r\n      try {\r\n        const response = await axios.get('http://localhost:8000/api/listar_solicitud')\r\n        this.solicitudes = response.data\r\n      } catch (error) {\r\n        console.error('Error fetching solicitudes', error)\r\n      }\r\n    },\r\n    handleCardClick(id) {\r\n      this.selectedSolicitud = id;\r\n      this.selectedSolicitudTitle = this.getSolicitudTitle(id);\r\n      this.showModal = true;\r\n      this.solicitudModalInstance.show();\r\n    },\r\n    closeModal() {\r\n      this.showModal = false;\r\n      this.solicitudModalInstance.hide();\r\n    },\r\n    getSolicitudTitle(id) {\r\n      const solicitud = this.solicitudes.find(s => s.id_tipo_solicitud === id);\r\n      return solicitud ? solicitud.tipo_solicitud : '';\r\n    },\r\n    calculateTiempoUtilizado() {\r\n      if (this.solicitud_permiso.fecha_inicio && this.solicitud_permiso.fecha_fin) {\r\n        const fechaInicio = new Date(this.solicitud_permiso.fecha_inicio);\r\n        const fechaFin = new Date(this.solicitud_permiso.fecha_fin);\r\n        const diffMs = fechaFin - fechaInicio; // diferencia en milisegundos\r\n        const diffHrs = Math.floor(diffMs / (1000 * 60 * 60)); // convertir a horas\r\n        const diffMins = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60)); // minutos restantes\r\n        this.solicitud_permiso.tiempo_utilizado = `${diffHrs} horas y ${diffMins} minutos`;\r\n      } else {\r\n        this.solicitud_permiso.tiempo_utilizado = '';\r\n      }\r\n    },\r\n    async enviarSolicitud() {\r\n      try {\r\n        const solicitudData = {\r\n          motivo: this.solicitud_permiso.motivo,\r\n          observacion: this.solicitud_permiso.observacion,\r\n          fecha_inicio: this.solicitud_permiso.fecha_inicio,\r\n          fecha_fin: this.solicitud_permiso.fecha_fin,\r\n          tipo_solicitud: this.selectedSolicitud\r\n        };\r\n\r\n        const response = await axios.post('http://localhost:8000/api/solicitud_permiso', solicitudData);\r\n        if (response.data.status) {\r\n          Swal.fire({\r\n            icon: 'success',\r\n            title: 'Éxito',\r\n            text: response.data.message\r\n          });\r\n          this.closeModal();\r\n        }\r\n      } catch (error) {\r\n        console.error('Error al enviar la solicitud', error);\r\n        Swal.fire({\r\n          icon: 'error',\r\n          title: 'Error',\r\n          text: 'Hubo un problema al enviar la solicitud'\r\n        });\r\n      }\r\n    }\r\n  },\r\n  watch: {\r\n    'solicitud_permiso.fecha_inicio': 'calculateTiempoUtilizado',\r\n    'solicitud_permiso.fecha_fin': 'calculateTiempoUtilizado'\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.container {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  flex-direction: column;\r\n}\r\n.card-header {\r\n  background-color: #f8f9fa;\r\n}\r\n.card {\r\n  width: 100%;\r\n}\r\n.card-body {\r\n  padding: 1rem;\r\n}\r\n.clickable-card {\r\n  cursor: pointer;\r\n  transition: transform 0.2s, box-shadow 0.2s;\r\n}\r\n.clickable-card:hover {\r\n  transform: scale(1.02);\r\n  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);\r\n}\r\n.modal-overlay {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background: rgba(0, 0, 0, 0.5);\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n}\r\n.modal-container {\r\n  background: white;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  max-width: 500px;\r\n  width: 100%;\r\n}\r\n.modal-header {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n.modal-title {\r\n  margin: 0;\r\n}\r\n.btn-close {\r\n  background: none;\r\n  border: none;\r\n  font-size: 1.5rem;\r\n  cursor: pointer;\r\n  color: #000; /* Asegúrate de que el botón de cierre sea visible */\r\n}\r\n</style>\r\n"],"mappings":"AA+EA,OAAOA,KAAI,MAAO,OAAM;AACxB,SAASC,KAAI,QAAS,WAAU;AAChC,OAAOC,IAAG,MAAO,aAAY;AAE7B,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAE,EAAE;MACfC,SAAS,EAAE,KAAK;MAChBC,iBAAiB,EAAE,IAAI;MACvBC,sBAAsB,EAAE,EAAE;MAC1BC,iBAAiB,EAAE;QACjBC,MAAM,EAAE,EAAE;QACVC,WAAW,EAAE,EAAE;QACfC,YAAY,EAAE,EAAE;QAChBC,SAAS,EAAE,EAAE;QACbC,gBAAgB,EAAE;MACpB,CAAC;MACDC,mBAAmB,EAAE,CACnB,YAAY,EAAE,OAAO,EAAE,YAAY,EAAE,qBA