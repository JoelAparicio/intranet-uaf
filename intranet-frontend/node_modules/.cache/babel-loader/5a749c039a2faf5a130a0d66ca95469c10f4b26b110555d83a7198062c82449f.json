{"ast":null,"code":"import axios from 'axios';\nimport { Modal } from 'bootstrap';\nexport default {\n  name: 'Solicitudes',\n  data() {\n    return {\n      solicitudes: [],\n      selectedSolicitud: null,\n      solicitud_permiso: {\n        motivo: '',\n        observacion: '',\n        fecha_inicio: '',\n        fecha_fin: '',\n        tiempo_utilizado: ''\n      }\n    };\n  },\n  created() {\n    this.fetchSolicitudes();\n  },\n  methods: {\n    async fetchSolicitudes() {\n      try {\n        const response = await axios.get('http://localhost:8000/api/listar_solicitud');\n        this.solicitudes = response.data;\n      } catch (error) {\n        console.error('Error fetching solicitudes', error);\n      }\n    },\n    handleCardClick(id) {\n      this.selectedSolicitud = id;\n      this.showModal(id);\n    },\n    showModal(id) {\n      const modalId = this.getModalId(id);\n      const modal = new bootstrap.Modal(document.getElementById(modalId));\n      modal.show();\n    },\n    getModalId(id) {\n      switch (id) {\n        case 1:\n          return 'permisoModal';\n        // Agregar más casos para otros tipos de solicitud\n        default:\n          return null;\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","Modal","name","data","solicitudes","selectedSolicitud","solicitud_permiso","motivo","observacion","fecha_inicio","fecha_fin","tiempo_utilizado","created","fetchSolicitudes","methods","response","get","error","console","handleCardClick","id","showModal","modalId","getModalId","modal","bootstrap","document","getElementById","show"],"sources":["C:\\laragon\\www\\intranet-frontend\\src\\components\\Solicitudes.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\">\r\n      <div class=\"col-md-12\">\r\n          <div class=\"card\">\r\n              <div class=\"card-header\">\r\n                  <h5 class=\"mb-3\">Solicitudes</h5>\r\n              </div>\r\n              <div class=\"card-body\">\r\n                  <p class=\"card-text\">Aquí podrás realizar solicitudes</p>\r\n                  <div class=\"row\">\r\n                      <div class=\"col-md-4 mb-3\" v-for=\"solicitud in solicitudes\" :key=\"solicitud.id_tipo_solicitud\">\r\n                          <div \r\n                              class=\"card h-100 shadow-sm clickable-card\" \r\n                              @click=\"handleCardClick(solicitud.id_tipo_solicitud)\"\r\n                          >\r\n                              <div class=\"card-body d-flex flex-column\">\r\n                                  <h5 class=\"card-title\">{{ solicitud.tipo_solicitud }}</h5>\r\n                                  <p class=\"card-text\">{{ solicitud.descripcion }}</p>\r\n                              </div>\r\n                          </div>\r\n                      </div>\r\n                  </div>\r\n              </div>\r\n          </div>\r\n      </div>\r\n      \r\n      <!-- Modal para el formulario de permiso -->\r\n      <div class=\"modal fade\" id=\"permisoModal\" tabindex=\"-1\" aria-labelledby=\"permisoModalLabel\" aria-hidden=\"true\" v-if=\"selectedSolicitud === 1\">\r\n          <div class=\"modal-dialog\">\r\n              <div class=\"modal-content\">\r\n                  <div class=\"modal-header\">\r\n                      <h5 class=\"modal-title\" id=\"permisoModalLabel\">Formulario de Permiso</h5>\r\n                      <button type=\"button\" class=\"btn-close\" data-bs-dismiss=\"modal\" aria-label=\"Close\"></button>\r\n                  </div>\r\n                  <div class=\"modal-body\">\r\n                      <form>\r\n                          <div class=\"mb-3\">\r\n                              <label for=\"motivo\" class=\"form-label\">Motivo</label>\r\n                              <input type=\"text\" class=\"form-control\" id=\"motivo\" v-model=\"solicitud_permiso.motivo\">\r\n                          </div>\r\n                          <div class=\"mb-3\">\r\n                              <label for=\"observacion\" class=\"form-label\">Observación</label>\r\n                              <input type=\"text\" class=\"form-control\" id=\"observacion\" v-model=\"solicitud_permiso.observacion\">\r\n                          </div>\r\n                          <div class=\"mb-3\">\r\n                              <label for=\"fecha_inicio\" class=\"form-label\">Fecha de Inicio</label>\r\n                              <input type=\"datetime-local\" class=\"form-control\" id=\"fecha_inicio\" v-model=\"solicitud_permiso.fecha_inicio\">\r\n                          </div>\r\n                          <div class=\"mb-3\">\r\n                              <label for=\"fecha_fin\" class=\"form-label\">Fecha de Fin</label>\r\n                              <input type=\"datetime-local\" class=\"form-control\" id=\"fecha_fin\" v-model=\"solicitud_permiso.fecha_fin\">\r\n                          </div>\r\n                          <button type=\"submit\" class=\"btn btn-primary\">Enviar solicitud</button>\r\n                      </form>\r\n                  </div>\r\n              </div>\r\n          </div>\r\n      </div>\r\n      \r\n      <!-- Agregar más modales para otros tipos de solicitud siguiendo el mismo patrón -->\r\n\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios'\r\nimport { Modal } from 'bootstrap'\r\n\r\nexport default {\r\n  name: 'Solicitudes',\r\n  data() {\r\n      return {\r\n          solicitudes: [],\r\n          selectedSolicitud: null,\r\n          solicitud_permiso: {\r\n              motivo: '',\r\n              observacion: '',\r\n              fecha_inicio: '',\r\n              fecha_fin: '',\r\n              tiempo_utilizado: '',\r\n          },\r\n      }\r\n  },\r\n  created() {\r\n      this.fetchSolicitudes()\r\n  },\r\n  methods: {\r\n      async fetchSolicitudes() {\r\n          try {\r\n              const response = await axios.get('http://localhost:8000/api/listar_solicitud')\r\n              this.solicitudes = response.data\r\n          } catch (error) {\r\n              console.error('Error fetching solicitudes', error)\r\n          }\r\n      },\r\n      handleCardClick(id) {\r\n          this.selectedSolicitud = id;\r\n          this.showModal(id);\r\n      },\r\n      showModal(id) {\r\n          const modalId = this.getModalId(id);\r\n          const modal = new bootstrap.Modal(document.getElementById(modalId));\r\n          modal.show();\r\n      },\r\n      getModalId(id) {\r\n          switch(id) {\r\n              case 1: return 'permisoModal';\r\n              // Agregar más casos para otros tipos de solicitud\r\n              default: return null;\r\n          }\r\n      }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.container {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  flex-direction: column;\r\n}\r\n.card-header {\r\n  background-color: #f8f9fa;\r\n}\r\n.card {\r\n  width: 100%;\r\n}\r\n.card-body {\r\n  padding: 1rem;\r\n}\r\n.clickable-card {\r\n  cursor: pointer;\r\n  transition: transform 0.2s, box-shadow 0.2s;\r\n}\r\n.clickable-card:hover {\r\n  transform: scale(1.02);\r\n  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);\r\n}\r\n</style>\r\n"],"mappings":"AAiEA,OAAOA,KAAI,MAAO,OAAM;AACxB,SAASC,KAAI,QAAS,WAAU;AAEhC,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,WAAW,EAAE,EAAE;MACfC,iBAAiB,EAAE,IAAI;MACvBC,iBAAiB,EAAE;QACfC,MAAM,EAAE,EAAE;QACVC,WAAW,EAAE,EAAE;QACfC,YAAY,EAAE,EAAE;QAChBC,SAAS,EAAE,EAAE;QACbC,gBAAgB,EAAE;MACtB;IACJ;EACJ,CAAC;EACDC,OAAOA,CAAA,EAAG;IACN,IAAI,CAACC,gBAAgB,CAAC;EAC1B,CAAC;EACDC,OAAO,EAAE;IACL,MAAMD,gBAAgBA,CAAA,EAAG;MACrB,IAAI;QACA,MAAME,QAAO,GAAI,MAAMf,KAAK,CAACgB,GAAG,CAAC,4CAA4C;QAC7E,IAAI,CAACZ,WAAU,GAAIW,QAAQ,CAACZ,IAAG;MACnC,EAAE,OAAOc,KAAK,EAAE;QACZC,OAAO,CAACD,KAAK,CAAC,4BAA4B,EAAEA,KAAK;MACrD;IACJ,CAAC;IACDE,eAAeA,CAACC,EAAE,EAAE;MAChB,IAAI,CAACf,iBAAgB,GAAIe,EAAE;MAC3B,IAAI,CAACC,SAAS,CAACD,EAAE,CAAC;IACtB,CAAC;IACDC,SAASA,CAACD,EAAE,EAAE