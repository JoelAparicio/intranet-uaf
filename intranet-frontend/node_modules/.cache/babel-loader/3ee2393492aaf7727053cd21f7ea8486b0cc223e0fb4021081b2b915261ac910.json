{"ast":null,"code":"import axios from 'axios';\nimport moment from 'moment';\nimport 'moment/locale/es';\nimport Swal from 'sweetalert2';\nimport { FontAwesomeIcon } from '@fortawesome/vue-fontawesome';\nexport default {\n  components: {\n    FontAwesomeIcon\n  },\n  data() {\n    return {\n      aprobaciones: [],\n      loading: true,\n      visualizada: false\n    };\n  },\n  methods: {\n    fetchAprobaciones() {\n      Swal.fire({\n        title: 'Cargando...',\n        allowOutsideClick: false,\n        didOpen: () => {\n          Swal.showLoading();\n        }\n      });\n      axios.get('http://localhost:8000/api/listar_aprobaciones_dpto').then(response => {\n        if (response.data.success) {\n          this.aprobaciones = response.data.data;\n        }\n        this.loading = false;\n        Swal.close();\n      }).catch(error => {\n        console.error('Error fetching aprobaciones:', error);\n        this.loading = false;\n        Swal.close();\n      });\n    },\n    aprobarSolicitud(id_solicitud) {\n      if (!this.visualizada) {\n        Swal.fire({\n          title: 'Atención',\n          text: 'Debe visualizar la solicitud antes de aprobarla.',\n          icon: 'warning',\n          confirmButtonText: 'Ok'\n        });\n        return;\n      }\n      axios.post(`http://localhost:8000/api/aprobar_solicitud/${id_solicitud}`).then(response => {\n        if (response.data.success) {\n          Swal.fire({\n            title: 'Aprobado!',\n            text: 'La solicitud ha sido aprobada exitosamente.',\n            icon: 'success',\n            timer: 1000,\n            showConfirmButton: false\n          }).then(() => {\n            window.location.reload();\n          });\n        }\n      }).catch(error => {\n        Swal.fire({\n          title: 'Error!',\n          text: `Error al aprobar la solicitud: ${error.response?.data?.message || error.message}`,\n          icon: 'error',\n          timer: 3000,\n          showConfirmButton: false\n        });\n        console.error('Error approving solicitud:', error);\n      });\n    },\n    rechazarSolicitud(id_solicitud) {\n      if (!this.visualizada) {\n        Swal.fire({\n          title: 'Atención',\n          text: 'Debe visualizar la solicitud antes de rechazarla.',\n          icon: 'warning',\n          confirmButtonText: 'Ok'\n        });\n        return;\n      }\n      Swal.fire({\n        title: 'Ingrese el motivo para el rechazo:',\n        input: 'textarea',\n        inputAttributes: {\n          'aria-label': 'Ingrese el motivo para el rechazo'\n        },\n        showCancelButton: true,\n        confirmButtonText: 'Rechazar',\n        cancelButtonText: 'Cancelar',\n        showLoaderOnConfirm: true,\n        preConfirm: comentarios_jefe => {\n          if (!comentarios_jefe) {\n            Swal.showValidationMessage('Debe ingresar un motivo para el rechazo');\n          } else {\n            return axios.post(`http://localhost:8000/api/rechazar_solicitud/${id_solicitud}`, {\n              comentarios_jefe\n            }).then(response => {\n              if (!response.data.success) {\n                throw new Error(response.data.message || 'Error rechazando la solicitud');\n              }\n              return response.data;\n            }).catch(error => {\n              Swal.showValidationMessage(`Request failed: ${error}`);\n            });\n          }\n        },\n        allowOutsideClick: () => !Swal.isLoading()\n      }).then(result => {\n        if (result.isConfirmed) {\n          Swal.fire({\n            title: 'Rechazado!',\n            text: 'La solicitud ha sido rechazada.',\n            icon: 'success',\n            timer: 1000,\n            showConfirmButton: false\n          }).then(() => {\n            window.location.reload();\n          });\n        }\n      });\n    },\n    visualizarSolicitud(id_solicitud) {\n      // Lógica para visualizar la solicitud (puede ser una redirección a una vista detallada o mostrar un modal)\n      console.log(`Visualizando solicitud con ID: ${id_solicitud}`);\n      this.visualizada = true;\n    },\n    formatFecha(fecha) {\n      if (!fecha) return '';\n      return moment(fecha).format('MMMM D YYYY, h:mm a');\n    }\n  },\n  mounted() {\n    this.fetchAprobaciones();\n  }\n};","map":{"version":3,"names":["axios","moment","Swal","FontAwesomeIcon","components","data","aprobaciones","loading","visualizada","methods","fetchAprobaciones","fire","title","allowOutsideClick","didOpen","showLoading","get","then","response","success","close","catch","error","console","aprobarSolicitud","id_solicitud","text","icon","confirmButtonText","post","timer","showConfirmButton","window","location","reload","message","rechazarSolicitud","input","inputAttributes","showCancelButton","cancelButtonText","showLoaderOnConfirm","preConfirm","comentarios_jefe","showValidationMessage","Error","isLoading","result","isConfirmed","visualizarSolicitud","log","formatFecha","fecha","format","mounted"],"sources":["C:\\laragon\\www\\intranet-frontend\\src\\components\\Lista_Aprobaciones.vue"],"sourcesContent":["<template>\r\n  <div class=\"container mt-0\">\r\n    <div class=\"card\">\r\n      <div class=\"card-header\">\r\n        <h4>Solicitudes pendientes</h4>\r\n      </div>\r\n      <div class=\"card-body pb-0\" style=\"max-height: 400px; overflow-y: auto;\">\r\n        <table class=\"table table-hover\">\r\n          <thead>\r\n            <tr>\r\n              <th>ID Solicitud</th>\r\n              <th>Colaborador</th>\r\n              <th>Tipo de Solicitud</th>\r\n              <th>Fecha de Creación</th>\r\n              <th>Acciones</th>\r\n            </tr>\r\n          </thead>\r\n          <tbody>\r\n            <tr v-if=\"aprobaciones.length === 0 && !loading\">\r\n              <td colspan=\"5\" class=\"text-center\">\r\n                No hay solicitudes pendientes <font-awesome-icon :icon=\"['far', 'face-smile-wink']\" />\r\n              </td>\r\n            </tr>\r\n     